<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_index">

    <ImageView
        android:id="@+id/main_take_photo_button"
        android:layout_width="232dp"
        android:layout_height="64dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/main_button"
        android:text="@string/main_take_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"/>

    <ImageView
        android:id="@+id/main_receive_photo_button"
        android:layout_width="232dp"
        android:layout_height="64dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/main_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8006757"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:src="@drawable/icon_publish"
        app:layout_constraintBottom_toBottomOf="@+id/main_take_photo_button"
        app:layout_constraintStart_toStartOf="@+id/main_take_photo_button"
        app:layout_constraintTop_toTopOf="@+id/guideline"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:src="@drawable/icon_join"
        app:layout_constraintBottom_toBottomOf="@+id/main_receive_photo_button"
        app:layout_constraintStart_toStartOf="@+id/main_receive_photo_button"
        app:layout_constraintTop_toTopOf="@+id/guideline2"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="2dp"
        android:text="@string/join_image"
        android:textColor="@color/moca_button_text_color"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/main_receive_photo_button"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:layout_constraintVertical_bias="0.435"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="2dp"
        android:text="@string/publish_image"
        android:textColor="@color/moca_button_text_color"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/main_take_photo_button"
        app:layout_constraintEnd_toEndOf="@+id/main_take_photo_button"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/guideline"/>
</android.support.constraint.ConstraintLayout>